<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/bottom_sheet1"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:layout_height="600dp"
    android:background="@android:color/transparent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:src="@color/white"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <bottomsup.mapbox.app.activity.TicketView
        android:layout_width="0dp"
        android:layout_height="550dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/transparent"
        android:clipToPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:ticketBorderWidth="1dp"
        app:ticketCornerRadius="50dp"
        app:ticketCornerType="rounded"
        app:ticketElevation="8dp"
        app:ticketOrientation="vertical"
        app:ticketScallopPositionPercent="50"
        app:ticketScallopRadius="55dp"
        app:ticketShowBorder="false"
        app:ticketShowDivider="false">

        <FrameLayout
            android:id="@+id/fragment_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>

    </bottomsup.mapbox.app.activity.TicketView>

</androidx.constraintlayout.widget.ConstraintLayout>